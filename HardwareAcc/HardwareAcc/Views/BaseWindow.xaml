<views:ChromeWindow x:Class="HardwareAcc.Views.BaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:views="clr-namespace:HardwareAcc.Views"
        mc:Ignorable="d"
        d:DesignHeight="1024" d:DesignWidth="1440"
        WindowStyle="None" AllowsTransparency="True">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="30"/>
    </WindowChrome.WindowChrome>
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/HardwareAcc;component/Views/ChromeControlsTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid>
        <ContentPresenter ContentTemplate="{StaticResource ChromeControlsTemplate}" />
        <Button Width="50" Height="50" Command="{Binding TestCommand}"></Button>
    </Grid>
</views:ChromeWindow>
